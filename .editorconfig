# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 180

[*.dart]
quote_type = single
max_line_length = 120

[{*.yml,*.yaml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
